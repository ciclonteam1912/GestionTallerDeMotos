@model GestionTallerDeMotos.ViewModels.ClienteViewModel
@{
    ViewBag.Title = "ClienteFormulario";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Agregar Cliente</h2>

@using (Html.BeginForm("Save", "Cliente"))
{
    <div class="panel panel-default">
        <div class="panel-heading">Agregar Cliente</div>
        <div class="panel-body">
            <div class="col-lg-6">
                <div class="form-group">
                    @Html.LabelFor(m => m.Cliente.PersoneriaId)
                    @Html.DropDownListFor(m => m.Cliente.PersoneriaId, new SelectList(Model.Personerias, "Id", "Descripcion"), "Seleccionar Personería", new { @class = "form-control" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Cliente.Nombre)
                    @Html.TextBoxFor(m => m.Cliente.Nombre, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Cliente.Apellido)
                    @Html.TextBoxFor(m => m.Cliente.Apellido, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Cliente.CorreoElectronico)
                    @Html.TextBoxFor(m => m.Cliente.CorreoElectronico, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Cliente.Telefono)
                    @Html.TextBoxFor(m => m.Cliente.Telefono, new { @class = "form-control" })
                </div>
            </div>
            <div class="col-lg-6">
                <div class="form-group">
                    @Html.LabelFor(m => m.Cliente.TipoDocumentoId)
                    @Html.DropDownListFor(m => m.Cliente.TipoDocumentoId, new SelectList(Model.TiposDocumentos, "Id", "Descripcion"), "Seleccionar Tipo de Documento", new { @class = "form-control" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Cliente.ValorDocumento)
                    @Html.TextBoxFor(m => m.Cliente.ValorDocumento, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Cliente.Direccion)
                    @Html.TextAreaFor(m => m.Cliente.Direccion, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Cliente.FechaDeNacimiento)
                    @Html.TextBoxFor(m => m.Cliente.FechaDeNacimiento, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Cliente.NombrePropietario)
                    @Html.TextBoxFor(m => m.Cliente.NombrePropietario, new { @class = "form-control" })
                </div>
            </div>
        </div>
        <div class="panel-footer">
            <button class="btn btn-primary">Guardar</button>
        </div>
    </div>
}