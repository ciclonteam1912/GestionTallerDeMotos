@model GestionTallerDeMotos.ViewModels.ClienteViewModel
@{
    ViewBag.Title = Model.Titulo;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@Html.Partial("_MenuVertical")

<div id="contenido">
    <i class="fa fa-bars menu-bar"></i>
    <h2>@Model.Titulo</h2>

    @using (Html.BeginForm("GuardarCliente", "Cliente"))
    {
        <div class="panel panel-default">
            <div class="panel-heading">@Model.Titulo</div>
            <div class="panel-body">
                <div class="row">
                    <h4>@Html.ValidationSummary(true, "¡Por favor solucione los siguientes errores!")</h4>
                </div>
                <div class="col-lg-6">
                    <div class="form-group">
                        @Html.LabelFor(m => m.PersoneriaId)
                        @Html.DropDownListFor(m => m.PersoneriaId, new SelectList(Model.Personerias, "Id", "Descripcion"), "Seleccionar Personería", new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.PersoneriaId)
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Nombre)
                        @Html.TextBoxFor(m => m.Nombre, new { @class = "form-control", placeholder = "Ingrese Nombre del Cliente..." })
                        @Html.ValidationMessageFor(m => m.Nombre)
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Apellido)
                        @Html.TextBoxFor(m => m.Apellido, new { @class = "form-control", placeholder = "Ingrese Apellido del Cliente..." })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.CorreoElectronico)
                        @Html.TextBoxFor(m => m.CorreoElectronico, new { @class = "form-control", placeholder = "Ingrese Correo Electrónico del Cliente..." })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Telefono)
                        @Html.TextBoxFor(m => m.Telefono, new { @class = "form-control", placeholder = "Ingrese Número de Teléfono del Cliente..." })
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="form-group">
                        @Html.LabelFor(m => m.TipoDocumentoId)
                        @Html.DropDownListFor(m => m.TipoDocumentoId, new SelectList(Model.TiposDocumentos, "Id", "Descripcion"), "Seleccionar Tipo de Documento", new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.TipoDocumentoId)
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.ValorDocumento)
                        @Html.TextBoxFor(m => m.ValorDocumento, new { @class = "form-control", placeholder = "Ingrese el Valor del Documento del Cliente..." })
                        @Html.ValidationMessageFor(m => m.ValorDocumento)
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Direccion)
                        @Html.TextAreaFor(m => m.Direccion, new { @class = "form-control", placeholder = "Ingrese Dirección del Cliente..." })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.FechaDeNacimiento)
                        @Html.TextBoxFor(m => m.FechaDeNacimiento, new { @class = "form-control", placeholder = "Ingrese Fecha de Nacimiento del Cliente..." })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.NombrePropietario)
                        @Html.TextBoxFor(m => m.NombrePropietario, new { @class = "form-control", placeholder = "Ingrese Nombre del Propietario del Cliente..." })
                    </div>
                    @Html.HiddenFor(m => m.Id)
                    @Html.AntiForgeryToken()
                </div>
            </div>
            <div class="panel-footer">
                <button class="btn btn-primary">Guardar</button>
            </div>
        </div>
    }
</div>


@section Scripts {
    <script>
        function closeNav() {
            document.getElementById("mySidenav").style.width = "0";
            document.getElementById("contenido").style.marginLeft = "0";
        }

        $(".menu-bar").click(function () {
            $(".contenedor-menu").width("250px");
        });

        $(document).ready(function () {
            $(".menu li:has(ul)").click(function (e) {
                e.preventDefault();

                if ($(this).hasClass('activado')) {
                    $(this).removeClass('activado');
                    $(this).children('ul').slideUp();
                } else {
                    $(".menu li ul").slideUp();
                    $(".menu li").removeClass('activado');
                    $(this).addClass('activado');
                    $(this).children('ul').slideDown();
                }
            });

            $(".menu li ul li a").click(function () {
                window.location.href = $(this).attr('href');
            });
        });
    </script>    
}