        <div class="row">
            <div class="col-lg-3 col-md-3">
                <a href="~/Account/Register">
                    <div class="panel panel-primary modulo">

                        <div class="panel-heading text-center">
                            <div class="row">
                                <i class="fa fa-star fa-5x" id="inicioVentas"></i>
                            </div>
