
@{
    ViewBag.Title = "Lista De Productos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col-lg-9 col-md-9 col-xs-11" id="contenido">
    <h2>Lista De Productos</h2>

    <p>
        @Html.ActionLink("Nuevo Producto", "NuevoProducto", "Producto", new { @class = "btn btn-primary" })
    </p>

    <table id="productos" class="table table-bordered table-hover table-responsive">
        <thead>
            <tr>
                <th></th>
                <th>Código</th>
                <th>Descripción</th>
                <th>Marca</th>
                <th>Exist. Actual</th>
                <th>Exist. Mín.</th>
                <th>Precio Costo</th>
                <th>Precio Venta</th>
            </tr>
        </thead>
        <tbody></tbody>
        <tfoot>
            <tr>
                <th></th>
                <th>Código</th>
                <th>Descripción</th>
                <th>Marca</th>
                <th>Exist. Actual</th>
                <th>Exist. Mín.</th>
                <th>Precio Costo</th>
                <th>Precio Venta</th>
            </tr>
        </tfoot>
    </table>
</div>


@section Scripts{
    <script>
        $(document).ready(function () {
            $("#menuStock").addClass('active');
            $("thead").show();
            $("tfoot").show();

            $("#productos tfoot th").each(function () {
                var title = $(this).text();
                if (title != "")
                    $(this).html('<input type="text" placeholder="Buscar ' + title + '" class="form-control"/>');
            });

            var table = $("#productos").DataTable({
                language: {
                    "sProcessing": "Procesando...",
                    "sLengthMenu": "Mostrar _MENU_ registros",
                    "sZeroRecords": "No se encontraron resultados",
                    "sEmptyTable": "Ningún dato disponible en esta tabla",
                    "sInfo": "Mostrando registros del _START_ al _END_ de un total de _TOTAL_ registros",
                    "sInfoEmpty": "Mostrando registros del 0 al 0 de un total de 0 registros",
                    "sInfoFiltered": "(filtrado de un total de _MAX_ registros)",
                    "sInfoPostFix": "",
                    "sSearch": "Buscar:",
                    "sUrl": "",
                    "sInfoThousands": ",",
                    "sLoadingRecords": "Cargando...",
                    "oPaginate": {
                        "sFirst": "Primero",
                        "sLast": "Último",
                        "sNext": "Siguiente",
                        "sPrevious": "Anterior"
                    },
                    "oAria": {
                        "sSortAscending": ": Activar para ordenar la columna de manera ascendente",
                        "sSortDescending": ": Activar para ordenar la columna de manera descendente"
                    }
                },
                ajax: {
                    url: "/api/productos",
                    dataSrc: ""
                },
                columns: [
                    {
                        sortable: false,
                        data: "Id",
                        render: function (data) {
                            return "<a href='/Producto/EditarProducto/" + data + "' class='btn-link glyphicon glyphicon-edit' title='Editar'></a>";
                        },
                    },
                    {
                        data: "Id"
                    },
                    {
                        data: "Descripcion"
                    },
                    {
                        data: "Marca"
                    },
                    {
                        data: "ExistenciaActual"
                    },
                    {
                        data: "ExistenciaMinima"
                    },
                    {
                        data: "PrecioCosto"
                    },
                    {
                        data: "PrecioVenta"
                    }
                ]
            });

            // Apply the search
            table.columns().every(function () {
                var that = this;

                $('input', this.footer()).on('keyup change', function () {
                    if (that.search() !== this.value) {
                        that
                            .search(this.value)
                            .draw();
                    }
                });
            });
        });
    </script>    
}
