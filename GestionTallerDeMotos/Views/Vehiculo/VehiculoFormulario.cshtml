@model GestionTallerDeMotos.ViewModels.VehiculoViewModel
@{
    ViewBag.Title = Model.Titulo;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@Html.Partial("_MenuVertical")


<div id="contenido">
    <i class="fa fa-bars menu-bar"></i>
    <h2>@Model.Titulo</h2>

    @using (Html.BeginForm("GuardarVehiculo", "Vehiculo"))
    {
        <div class="panel panel-default">
            <div class="panel-heading">@Model.Titulo</div>
            <div class="panel-body">
                <div class="row">
                    @Html.ValidationSummary(true, "¡Por favor soluciona los siguientes errores!")
                </div>
                <div class="row">
                    <div class="col-lg-6">
                        <div class="form-group">
                            @Html.LabelFor(v => v.ClienteId)
                            @Html.DropDownListFor(v => v.ClienteId, new SelectList(Model.Clientes, "Id", "NombreCompleto"), "Seleccione un Cliente", new { @class = "form-control" })
                            @Html.ValidationMessageFor(v => v.ClienteId)
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="form-group">
                            @Html.LabelFor(v => v.ModeloId)
                            @Html.DropDownListFor(v => v.ModeloId, new SelectList(Model.Modelos, "Id", "Nombre"), "Seleccione un Modelo del Vehículo", new { @class = "form-control" })
                            @Html.ValidationMessageFor(v => v.ModeloId)
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-6">
                        <div class="form-group">
                            @Html.LabelFor(v => v.AseguradoraId)
                            @Html.DropDownListFor(v => v.AseguradoraId, new SelectList(Model.Aseguradoras, "Id", "Nombre"), "Seleccione una Aseguradora", new { @class = "form-control" })
                            @Html.ValidationMessageFor(v => v.AseguradoraId)
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="form-group">
                            @Html.LabelFor(v => v.CombustibleId)
                            @Html.DropDownListFor(v => v.CombustibleId, new SelectList(Model.Combustibles, "Id", "Nombre"), "Seleccione un Tipo de Combustible", new { @class = "form-control" })
                            @Html.ValidationMessageFor(v => v.CombustibleId)
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-6">
                        <div class="form-group">
                            @Html.LabelFor(v => v.Matricula)
                            @Html.TextBoxFor(v => v.Matricula, new { @class = "form-control" })
                            @Html.ValidationMessageFor(v => v.Matricula)
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="form-group">
                            @Html.LabelFor(v => v.Chasis)
                            @Html.TextBoxFor(v => v.Chasis, new { @class = "form-control" })
                        </div>
                    </div>

                </div>
                <div class="row">
                    <div class="col-lg-6">
                        <div class="form-group">
                            @Html.LabelFor(v => v.Motor)
                            @Html.TextBoxFor(v => v.Motor, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="form-group">
                            @Html.LabelFor(v => v.Cilindrada)
                            @Html.TextBoxFor(v => v.Cilindrada, new { @class = "form-control" })
                            @Html.ValidationMessageFor(v => v.Cilindrada)
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-6">
                        <div class="form-group">
                            @Html.LabelFor(v => v.Kilometro)
                            @Html.TextBoxFor(v => v.Kilometro, new { @class = "form-control" })
                            @Html.ValidationMessageFor(v => v.Kilometro)
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="form-group">
                            @Html.LabelFor(v => v.Color)
                            @Html.TextBoxFor(v => v.Color, new { @class = "form-control" })
                        </div>
                    </div>
                </div>
                @Html.HiddenFor(v => v.Id)
                @Html.AntiForgeryToken()
            </div>
            <div class="panel-footer">
                <button class="btn btn-primary">Guardar</button>
            </div>
        </div>
    }
</div>


@section Scripts{
    <script>
        function closeNav() {
            document.getElementById("mySidenav").style.width = "0";
            document.getElementById("contenido").style.marginLeft = "0";
        }

        $(".menu-bar").click(function () {
            $(".contenedor-menu").width("250px");
        })

        $(document).ready(function () {
            $(".menu li:has(ul)").click(function (e) {
                e.preventDefault();

                if ($(this).hasClass('activado')) {
                    $(this).removeClass('activado');
                    $(this).children('ul').slideUp();
                } else {
                    $(".menu li ul").slideUp();
                    $(".menu li").removeClass('activado');
                    $(this).addClass('activado');
                    $(this).children('ul').slideDown();
                }
            });

            $(".menu li ul li a").click(function () {
                window.location.href = $(this).attr('href');
            });
        });
    </script>
}